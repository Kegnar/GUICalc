<Window x:Class="GUICalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUICalc"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Калькулятор v.0.0.1" Height="250" Width="350">
    <Grid>
        <TextBlock Text="Мегакалькулятор"
                   FontSize="14"
                   Margin="8,8,0,0" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Height="24" />

        <TextBlock Text="Параметр 1:" 
                   FontSize="14" 
                   Margin="16,104,0,0" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Height="24" />

        <TextBox Text="TextBox" 
                 Margin="120,48,0,0" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Top" 
                 Width="152" 
                 Height="32" 
                 FontSize = "14"/>    

        <TextBlock Text="Параметр 2:"
                   FontSize="14" 
                   Margin="16,56,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" 
                   Height="24" />

        <TextBox Text="TextBox" 
                 Margin="120,96,0,0" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Top" 
                 Width="152" Height="32" 
                 FontSize = "14"/>

        <TextBlock Text="Операция:" 
                   FontSize="14" 
                   Margin="16,152,0,0" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Height="24" />

        <ComboBox Margin="120,144,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="152" Height="32" Padding="6,4" FontSize="14">
            <ComboBoxItem Content="Item1" IsSelected="True" />
            <ComboBoxItem Content="Item2" />
        </ComboBox>

        <Button Content="Результат"
                Margin="16,200,0,0" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Width="88" 
                Height="32" />
    </Grid>
</Window>

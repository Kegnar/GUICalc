<Window x:Class="GUICalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUICalc"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Калькулятор v.0.0.1" Height="300" Width="300">
    <Grid>
        <TextBlock Text="Мегакалькулятор"
                   FontSize="14"
                   Margin="8,8,0,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Height="24" />

        <TextBlock Text="Параметр 1:"
                   FontSize="14"
                   Margin="16,56,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Height="24" />

        <TextBox Margin="120,48,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Width="152"
                 Height="32"
                 FontSize="14" 
                 Name="FirstParam"/>


        <TextBlock Text="Параметр 2:"
                   FontSize="14"
                   Margin="16,104,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Height="24" />

        <TextBox Margin="120,96,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Width="152" Height="32"
                 FontSize="14"
                 Name="SecondParam"/>
        
        <TextBlock Text="Операция:"
                   FontSize="14"
                   Margin="16,152,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Height="24" />

        <ComboBox Margin="120,144,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Width="152"
                  Height="32"
                  Padding="6,4"
                  FontSize="14"
                  Name="OperationSelect"
                  SelectedIndex="0">
            
        </ComboBox>

        <Button Content="Результат"
                Margin="16,200,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="88"
                Height="32"
                Click="CalculateResult" />
        <TextBlock Name="Result"
                   Margin="120,180,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Height="32"
                   FontSize="14">
        </TextBlock>
    </Grid>
</Window>